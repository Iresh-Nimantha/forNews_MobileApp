<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/evScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/evMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/evHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bottom_nav_rounded_bottom_bg"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/evHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Events"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/evHeaderLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/logo" />

        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:id="@+id/evContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- First Event Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/evEventCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:radius="12dp">

                <LinearLayout
                    android:id="@+id/evEvent1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/evEvent1Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/evEvent1Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nana yathra- 1st Edition"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/evEvent1Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="20 mins ago"
                            android:textColor="#999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/evEvent1Image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <LinearLayout
                        android:id="@+id/evEvent1Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/evEvent1Description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="නාන යාත්‍රා 1st Edition - Arduino &amp; Robotics Workshop organized by Society of"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/evEvent1SeeMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="See more..."
                            android:textColor="#4A5FBF"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>





        </LinearLayout>
    </LinearLayout>
</ScrollView>
