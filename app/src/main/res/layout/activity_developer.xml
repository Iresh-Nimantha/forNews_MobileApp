<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F5F5F5"
    android:padding="32dp">

    <!-- Top spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <!-- Profile Image with circular background -->
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/developer_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/developer_photo"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_profile_background" />

    </FrameLayout>

    <!-- Spacing after image -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- Developer Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/circle_background"
        android:padding="24dp"
        android:layout_marginHorizontal="16dp">

        <!-- Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="16sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/developer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhon Dho"
                android:textSize="16sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Student Number -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student no.: "
                android:textSize="16sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022T01558"
                android:textSize="16sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Personal Statement Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal statement:"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Personal Statement Text -->
        <TextView
            android:id="@+id/personal_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passionate tech student eager to solve real-world problems through innovation and collaboration"
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Release Version -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release version: "
                android:textSize="16sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/release_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.v"
                android:textSize="16sp"
                android:textColor="#333333" />

        </LinearLayout>

    </LinearLayout>

    <!-- Flexible spacing to push button to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Exit"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#6C7FD8"
        android:background="@drawable/rounded_button"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp" />

</LinearLayout>
